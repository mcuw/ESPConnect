    "vue-i18n": "^11.2.8",
    "vuetify": "^3.11.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.6",
    "@vitejs/plugin-vue": "^6.0.3",
    "sass": "^1.97.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-vuetify": "^2.1.2",
    "vitest": "^4.0.16",
    "vue-tsc": "^3.2.2"
  },
  "packageManager": "pnpm@10.26.0"
