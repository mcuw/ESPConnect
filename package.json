{
  "name": "espconnect",
  "productName": "ESPConnect",
  "private": true,
  "version": "1.1.3",
  "type": "module",
  "description": "Browser-based control center for ESP32 and ESP8266 boards",
  "author": "mcuw",
  "license": "MIT",
  "engines": {
    "pnpm": ">=10.26.0",
    "node": ">=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run typecheck && vite build",
    "typecheck": "vue-tsc --noEmit -p tsconfig.json",
